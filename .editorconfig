# http://editorconfig.org

root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = false

[*.sql]
indent_size = 2

[*.yaml]
indent_size = 2

[*.yml]
indent_size = 2

[*.xml]
indent_size = 2
max_line_length = 10000

[*.json]
indent_size = 2
max_line_length = 1000

[*.go]
indent_style = tab
indent_size = 4

# https://github.com/Dreamscapes/makefiles/blob/master/.editorconfig
[{Makefile, **.mk}]
indent_style = tab

